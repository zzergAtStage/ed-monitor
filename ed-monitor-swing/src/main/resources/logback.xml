<!-- src/main/resources/logback.xml -->
<configuration>
    <property name="LOG_DIR" value="logs"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{HH:mm:ss.SSS}] [%-5level] [%thread] %logger{1} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="ROUTE_FILE" class="ch.qos.logback.core.FileAppender">
        <file>${LOG_DIR}/com.zergatstage.monitor.routes.service.log</file>
        <append>true</append>
        <encoder>
            <pattern>[%d{HH:mm:ss.SSS}] [%-5level] [%thread] %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- set root to DEBUG -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
    <logger name="com.zergatstage.monitor.routes.service.GreedyRouteOptimizationService"
        level="INFO">
        <appender-ref ref="ROUTE_FILE"/>
        <appender-ref ref="STDOUT"/>
    </logger>
</configuration>
